@model IEnumerable<Sistemas_de_Vendas.Models.Category>

@{
    ViewData["Title"] = "Index";
}



<p>
    <a asp-action="Create" class="text-decoration-none btn btn-dark"><i class="bi bi-plus-lg"></i> Adicionar Nova Categoria</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.CategoryID" class="text-dark text-decoration-none">Editar <i class="bi bi-pencil-square"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.CategoryID" class="text-dark text-decoration-none">Detalhes <i class="bi bi-arrow-right"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.CategoryID" class="text-dark text-decoration-none">Deletar <i class="bi bi-trash-fill"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
