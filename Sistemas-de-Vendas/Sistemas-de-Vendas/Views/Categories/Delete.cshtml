@model Sistemas_de_Vendas.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar Categoria</h1>

<h3>Você tem certeza que quer deletar essa categoria?</h3>
<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoryID" />
        <input type="submit" value="Deletar" class="btn btn-danger mt-3" />
        <a asp-action="Index" class="btn btn-light mt-3">Voltar a Lista</a>
    </form>
</div>
