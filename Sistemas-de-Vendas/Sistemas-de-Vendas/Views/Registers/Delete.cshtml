@model Sistemas_de_Vendas.Models.Register

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar Usuário</h1>

<h3>Você tem certeza que quer deletar esse usuário?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="RegisterID" />
        <input type="submit" value="Deletar" class="btn btn-danger mt-3" /> 
        <a asp-action="Index" class="btn btn-light mt-3">Voltar a Lista</a>
    </form>
</div>
