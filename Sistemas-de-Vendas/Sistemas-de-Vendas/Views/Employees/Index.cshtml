@model IEnumerable<Sistemas_de_Vendas.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create" class="text-decoration-none btn btn-dark"><i class="bi bi-plus-lg"></i> Adicionar Novo Usuário</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeCPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.HiringDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeCPF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HiringDate)
            </td>
                
            <td>
                    <a asp-action="Edit" asp-route-id="@item.EmployeeID" class="text-dark text-decoration-none">Editar <i class="bi bi-pencil-square"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.EmployeeID" class="text-dark text-decoration-none">Detalhes <i class="bi bi-arrow-right"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.EmployeeID"class="text-dark text-decoration-none">Deletar <i class="bi bi-trash-fill"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
