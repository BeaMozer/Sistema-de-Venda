@model Sistemas_de_Vendas.Models.Employee

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Funcionário</h1>


<hr />
<div >
    <div>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EmployeeID" />
            <div class="row mb-3">
                <div class="form-group col-3">
                    <label asp-for="EmployeeName" class="control-label"></label>
                    <input asp-for="EmployeeName" class="form-control" />
                    <span asp-validation-for="EmployeeName" class="text-danger"></span>
                </div>
                <div class="form-group col-3">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group col-3">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group col-3">
                    <label asp-for="EmployeeCPF" class="control-label"></label>
                    <input asp-for="EmployeeCPF" class="form-control" />
                    <span asp-validation-for="EmployeeCPF" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="form-group col-3">
                    <label asp-for="HiringDate" class="control-label"></label>
                    <input asp-for="HiringDate" class="form-control" />
                    <span asp-validation-for="HiringDate" class="text-danger"></span>
                </div>
                <div class="form-group col-3">
                    <label asp-for="Position" class="control-label"></label>
                    <input asp-for="Position" class="form-control" />
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>
                <div class="form-group col-3">
                    <label asp-for="AccessLevel" class="control-label"></label>
                    <input asp-for="AccessLevel" class="form-control" />
                    <span asp-validation-for="AccessLevel" class="text-danger"></span>
                </div>

                <div class="form-group col-3">
                    <label asp-for="Register" class="control-label"></label>
                    <input asp-for="Register" class="form-control" />
                    <span asp-validation-for="Register" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success mt-3" />
                <a asp-action="Index" class="btn btn-light mt-3">Voltar a Lista</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
